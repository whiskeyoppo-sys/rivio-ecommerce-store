# Fully conceptualized - Environment variables template
# Design choice: Comprehensive env vars with clear documentation

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/rivio_db?schema=public"
REDIS_URL="redis://localhost:6379"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_SECRET="your-refresh-token-secret"
REFRESH_TOKEN_EXPIRES_IN="30d"

# API Configuration
API_PORT=3001
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:3001"

# Payment Gateways
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
PAYPAL_CLIENT_ID="..."
PAYPAL_CLIENT_SECRET="..."
PAYMENT_GATEWAY="stripe" # stripe | paypal

# Feature Flags
ENABLE_AI_RECOMMENDATIONS=false
ENABLE_SEMANTIC_SEARCH=false
ENABLE_DYNAMIC_PRICING=false
ENABLE_AUTO_DESCRIPTIONS=false

# AI/ML Services (Optional)
OPENAI_API_KEY=""
EMBEDDINGS_MODEL="text-embedding-ada-002"
ML_SERVICE_URL="http://localhost:5000"

# Monitoring
SENTRY_DSN=""
LOG_LEVEL="info"

# Email
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM="noreply@rivio.com"

# Storage
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="10485760" # 10MB
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Session
SESSION_SECRET="your-session-secret"
SESSION_TIMEOUT=3600
